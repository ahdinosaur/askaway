.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Ask Away
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li 
          = link_to 'Newest', new_questions_path
      = link_to 'Ask a question', new_question_path, class: 'btn btn-primary navbar-right navbar-btn'

- flash.each do |name, msg|
  - flash_class = 'alert'
  - flash_class += ' alert-success' if name == :notice
  %div{class: flash_class}
    %button{type: 'button', class: 'close', :'data-dismiss' => 'alert', :'aria-hidden' => 'true'} &times;
    .container
      %div= msg

