.row
  .col-xs-12.col-md-8.col-md-offset-2
    %h3.ql__heading= heading
    %ul.list-group
      - questions.each do |question|
        %li.list-group-item.question{id: "question-#{question.id}"}
          .row
            .col-xs-1.question__up-vote
              - if current_user_has_voted_for?(question)
                = link_to current_user_vote_for(question), method: :delete, id: "vote-for-#{question.id}" do
                  %i.fa.fa-chevron-up.fa-chevron-up-voted
              - else
                = link_to question_votes_path(question), method: :post, id: "vote-for-#{question.id}" do
                  %i.fa.fa-chevron-up
              %span.question__votes-count=question.votes_count
            .col-xs-11
              .question__body= link_to question.body, question
              .text-detail= asked_by_at_time_ago(question)
              - if question.answers_count > 0
                .ql__answers
                  .ql__answers__count=pluralize(question.answers_count, "answer")
                  %ul.list-inline.ql__answers__list
                    - question.answers.each do |answer|
                      %li.ql__answers__rep-pic
              .row.question__share
                .col-xs-4
                  %i.fa.fa-comment
                  =question.comments_count
                .col-xs-4
                  %i.fa.fa-facebook
                  Share
                .col-xs-4
                  %i.fa.fa-twitter
                  Tweet
    .pagination-outer-container{style: 'text-align: center'}
      = will_paginate @questions, renderer: BootstrapPagination::Rails
