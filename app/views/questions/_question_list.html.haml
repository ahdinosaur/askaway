.row
  .col-xs-12.col-md-8.col-md-offset-2
    %h3.page-heading= heading
    %ul.list-group.question-list{ng_controller: 'QuestionsCtrl'}
      - @questions.each do |question|
        %li.question.list-group-item.list-group-item-clickable{id: "question-list-question-#{question.id}", onclick: "location.href='#{question_path(question)}';"}
          .row
            .col-xs-1.question-up-vote
              = render 'question_up_vote', question: question
            .col-xs-11
              %a.list-group-item-clickable-header{href: question_path(question)}= question.body
              .text-detail= asked_by_at_time_ago(question)

          - if question.answers_count > 0
            .row
              .col-xs-11.col-xs-offset-1
                .answers-preview
                  .answers-preview-count.text-detail=pluralize(question.answers_count, "answer")
                  %ul.list-inline.answers-preview-avatars
                    - question.answers.each do |answer|
                      %li.answers-preview-avatar

    .pagination-outer-container{style: 'text-align: center'}
      = will_paginate @questions, renderer: BootstrapPagination::Rails

